<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>food details</h1>
    <p id="food_name">
        <%= detailsFromApi.food.food_name %>
    </p>
    <p id="food_type">
        <%= detailsFromApi.food.food_type %>
    </p>
    <p><%= detailsFromApi.food.servings.serving[0].serving_description %></p>
    <label for="selectServing">Select serving size</label>
    <select name="serving" id="selectServing">
        <% detailsFromApi.food.servings.serving.forEach(function(serving) { %>
            <option value="<%= serving.serving_description %>"><%= serving.serving_description %></option>
            <% }); %>
        </select>
        <a href=<%=detailsFromApi.food.food_url %>>
            <p id="food_url">
                for more nutrition info
            </p>
        </a>
    <footer>
        <a href="https://www.fatsecret.com">
            <img src="https://platform.fatsecret.com/api/static/images/powered_by_fatsecret.png" alt='fatsecretsicon'
                srcset="https://platform.fatsecret.com/api/static/images/powered_by_fatsecret_2x.png 2x, https://platform.fatsecret.com/api/static/images/powered_by_fatsecret_3x.png 3x"
                border="0" />
        </a>
    </footer>
    <!-- <script src="ejs.min.js"></script> -->
    <!-- <script src="../js/foodDetails.js"></script> -->
</body>

</html>